# W컨셉 랭킹 트래커 - 환경 변수 설정

# 데이터베이스 설정
DATABASE_URL=postgresql://user:password@localhost:5432/wconcept_tracker
# 또는 SQLite 사용: sqlite:///./data/wconcept.db

# API 설정
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# 크롤링 설정
SCRAPE_INTERVAL_HOURS=1
SCRAPE_PRODUCT_LIMIT=200
SCRAPE_DELAY_MIN=2
SCRAPE_DELAY_MAX=5

# Chrome 설정
CHROME_HEADLESS=true
CHROME_NO_SANDBOX=true

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/app.log

# 프록시 설정 (선택적)
# USE_PROXY=false
# PROXY_URL=http://proxy.example.com:8080

# Redis 설정 (선택적)
# REDIS_URL=redis://localhost:6379/0
